.header
  %h1 Price Watch
%hr
-#%p#notice= notice
.search
  = form_tag(items_path, method: 'get', id: "search-form") do
    = text_field_tag :search, params[:search], placeholder: "Search Items", class: "search-field"
    = submit_tag "Search", class: "search-button"
%hr
%table
  %thead
    %tr
      %th.th-name Name
      %th.th-srp SRP
      -#%th Description
      %th{:colspan => "2"}
  %tbody
    - @items.each do |item|
      %tr
        %td= link_to item.name, item
        %td= item.price
        -#%td= item.description
        -#%td= link_to 'Show', item
        -#%td= link_to 'Edit', edit_item_path(item)
        -#%td= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }
%br/
-#= link_to 'New Item', new_item_path
